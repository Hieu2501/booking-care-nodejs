<div class="container mt-5">
    <h2>List Users</h2>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Address</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
            <% for(var i=0; i < dataUsers.length; i++) { %>
                <tr>
                  <td><%= dataUsers[i].email %></td>
                  <td><%= dataUsers[i].firstName %></td>
                  <td><%= dataUsers[i].lastName %></td>
                  <td><%= dataUsers[i].address %></td>
                  <td class="d-flex align-items-sm-start">
                    <a href="/edit-user/<%= dataUsers[i].id %>" type="button" class="btn btn-info">Edit</a>
                    <form class="ms-3" method="POST" action="/delete-user/<%= dataUsers[i].id %>?_method=DELETE">
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                  </td>
                </tr>
             <% } %>
        </tbody>
    </table>
    <a href="/create-new-user">Create New User</a>
</div>

